<h1 class="title">
  <%= @post.title %>
</h1>

<p class="date">
  <!-- holy crap so smart! -->
  Submitted <%= time_ago_in_words(@post.created_at) %> ago
  | <%= link_to "EDIT", edit_post_path(@post) %>
  | <%= link_to "Delete", post_path(@post), method: :delete %>
</p>

<p class="body">
 <%= @post.body %>
</p>