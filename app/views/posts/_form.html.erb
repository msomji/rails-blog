<%= form_for @post do |f| %>
  <% if @post.errors.any?%>
    <div id="errors">
      <!-- if there is more than one error than the pluralize will plurallize the errors! pretty sweet! -->
      <h2><%= pluralize(@post.errors.count, "error") %></h2>
      <ul>
          <% @post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
          <% end %>
      </ul>
      <% end %>
    </div>
   <p>
      <%= f.label :title %> <br>
      <%= f.text_field :title %><br>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %><br>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>