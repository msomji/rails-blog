<h1 class="title">this is the posts index</h1>

<% @post.each do |post| %>
  <div class="post_wrapper">
    <!-- link to post.title, and it is going to be the post path. -->
    <h3 class="title"> <%= link_to post.title, post %></h3>
    <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
  </div>

<% end %>